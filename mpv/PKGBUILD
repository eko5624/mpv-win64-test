# Maintainer: nyfair <nyfair2012@gmail.com>
pkgname=mpv-git
pkgver=0.34.1
pkgrel=1
pkgdesc='a free, open source, and cross-platform media player'
arch=('x86_64')
url='https://mpv.io/'
makedepends=('yasm' 'vapoursynth-dev' 'ffmpeg-dev' 'luajit2-dev' 'ffnvcodec-dev' 'freetype2-dev' 'fribidi-dev' 'harfbuzz-dev' 'lcms2-dev'
              'libbluray-dev' 'libdvdcss-dev' 'libdvdread-dev' 'libdvdnav-dev' 'shaderc-dev' 'spirv-cross-dev' 'vulkan-dev')
license=('GPL3')
source=("git+https://github.com/mpv-player/mpv")
md5sums=('SKIP')

build() {
  cd $srcdir/mpv  
  python bootstrap.py
  CC=gcc.exe LDFLAGS="$LDFLAGS -static -lssp" python waf configure --prefix=/opt --enable-static-build --enable-libbluray --enable-dvdnav --disable-iconv --disable-debug-build
  python waf build -v
}

package() {
  export PKGEXT='.pkg.tar.xz'
  mkdir -p $pkgdir/opt/mpv
  cd $srcdir/mpv/build
  mv mpv.exe $pkgdir/opt/mpv
  mv mpv.com $pkgdir/opt/mpv
  strip -s $pkgdir/opt/mpv/mpv.*
}
